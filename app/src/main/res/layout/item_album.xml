<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/albumCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:id="@+id/albumThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/gray_300"
            tools:src="@drawable/ic_album" />
            
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/albumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/itemCount"
        app:layout_constraintLeft_toRightOf="@id/albumCard"
        app:layout_constraintRight_toLeftOf="@+id/dateInfo"
        app:layout_constraintTop_toTopOf="@id/albumCard"
        tools:text="Camera" />
        
    <TextView
        android:id="@+id/itemCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        app:layout_constraintBottom_toBottomOf="@id/albumCard"
        app:layout_constraintLeft_toRightOf="@id/albumCard"
        app:layout_constraintRight_toLeftOf="@+id/dateInfo"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        tools:text="124 items" />
        
    <TextView
        android:id="@+id/dateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_600"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/albumCard"
        tools:text="2024-01-15" />
        
</androidx.constraintlayout.widget.ConstraintLayout>
